          + Import scripts from other directories
          + Use a different preprocessor, like TypeScript

    -->

    <!--SCRIPTS-->
    <script src="/vendor/angular/angular.js"></script>
    <script src="/vendor/lodash/dist/lodash.min.js"></script>
    <script src="/vendor/restangular/dist/restangular.min.js"></script>
    <script src="/vendor/angular-sanitize/angular-sanitize.min.js"></script>
    <script src="/vendor/angular-animate/angular-animate.min.js"></script>
    <script src="/vendor/angular-ui-router/release/angular-ui-router.min.js"></script>
    <script src="/vendor/angular-bootstrap/ui-bootstrap.min.js"></script>
    <script src="/vendor/angular-bootstrap/ui-bootstrap-tpls.js"></script>
    <script src="/vendor/showdown/compressed/showdown.js"></script>
    <script src="/vendor/showdown/compressed/extensions/google-prettify.js"></script>
    <script src="/vendor/angular-markdown-directive/markdown.js"></script>
    <script src="/vendor/ngFileReader/src/ngFileReader.min.js"></script>
    <script src="/vendor/angular-bootstrap-toggle-switch/angular-toggle-switch.min.js"></script>
    <script src="/app/app.js"></script>
    <script src="/app/auth/auth-controller.js"></script>
    <script src="/app/auth/auth-factory.js"></script>
    <script src="/app/auth/auth-routes.js"></script>
    <script src="/app/components/sails-resource/sails-resource-service.js"></script>
    <script src="/app/document/document-controller.js"></script>
    <script src="/app/document/document-routes.js"></script>
    <script src="/app/menu/menu-controller.js"></script>
    <script src="/app/menu/menu-routes.js"></script>
    <script src="/app/score/score-controller.js"></script>
    <script src="/app/score/score-routes.js"></script>
    <script src="/app/solution/solution-controller.js"></script>
    <script src="/app/solution/solution-routes.js"></script>
    <script src="/app/user/user-controller.js"></script>
    <script src="/app/user/user-routes.js"></script>
    <!--SCRIPTS END-->
  </body>
</html>
